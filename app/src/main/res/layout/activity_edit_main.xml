<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Editing.EditMain">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/editMainLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.7"
                    android:clickable="true"
                    android:onClick="onDropDownClick"
                    android:textSize="24sp"
                    tools:text="   " />

                <TextView
                    android:id="@+id/playerDropDownMaybe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:onClick="onDropDownClick"
                    android:text="Player"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/EditPlayerButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:onClick="onPlayerEdit"
                    android:text="Edit" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/stateDrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.8"
                    android:clickable="true"
                    android:onClick="onDropDownClick"
                    android:textSize="24sp"
                    tools:text="   " />

                <TextView
                    android:id="@+id/statesDropDown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:onClick="onDropDownClick"
                    android:text="States"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/addState"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:onClick="onAddClick"
                    android:text="                    +"
                    android:textSize="24sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/transDrop"
                android:layout_width="match_parent"
